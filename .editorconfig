root = true

[*]
end_of_line              = lf
insert_final_newline     = true
charset                  = utf-8
trim_trailing_whitespace = true
indent_style             = space

[*.{js,mjs,cjs,ts,mts}]
indent_size = 4

[*.html]
indent_size = 2

[*.css]
indent_size = 2

[*.{json,jsonc}]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2

[*.sh]
indent_size = 4

[.swcrc]
indent_size = 2

[.justfile]
indent_size = 2
